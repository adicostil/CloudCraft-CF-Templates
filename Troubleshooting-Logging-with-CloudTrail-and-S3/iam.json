{
    "Version": "2012-10-17",
    "Statement": [{
        "Effect": "Allow",
        "Action": [
            "cloudtrail:*",
            "cloudwatch:*",
            "logs:*",
            "iam:PassRole",
            "iam:ListRoles",
            "iam:GetRolePolicy",
            "iam:GetUser",
            "iam:PutRolePolicy",
            "kms:ListKeys",
            "kms:ListAliases",
            "s3:*",
            "sns:AddPermission",
            "sns:CreateTopic",
            "sns:DeleteTopic",
            "sns:ListTopics",
            "sns:SetTopicAttributes",
            "sns:GetTopicAttributes",
            "sts:AssumeRole",
            "tag:*"
        ],
        "Resource": [
            "*"
        ]
    }]
}